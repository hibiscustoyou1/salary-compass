  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec npx tsx src/index.ts",
    "build": "pnpm prisma:gen && pnpm esbuild && pnpm cp-dep",
    "esbuild": "npx esbuild src/index.ts --bundle --platform=node --target=node22 --format=cjs --outfile=./dist/index.js",
    "cp-dep": "npx tsx scripts/copy-deps.ts",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:gen": "npx prisma generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@repo/shared": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "nodemon": "^3.1.11",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
