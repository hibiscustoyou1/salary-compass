{
  "name": "app-template",
  "version": "1.0.0",
  "scripts": {
    "install:all": "pnpm i -r && pnpm build:shared",
    "dev": "pnpm vault:dec && pnpm --filter './apps/*' --parallel dev",
    "build:app": "pnpm build:shared && pnpm --filter './apps/*' --parallel build",
    "build:shared": "pnpm --filter @repo/shared build",
    "clean": "rimraf dist apps/*/dist packages/*/dist",
    "build": "pnpm clean && pnpm build:app && pnpm move:dist",
    "move:dist": "mkdir -p dist && cp .env.enc dist/.env.enc && mv apps/client/dist dist/client && mv apps/server/dist dist/server",
    "start": "pnpm vault:dec && cd dist && node server/index.js",
    "db:migrate": "dotenv -e .env -- pnpm --filter server prisma:migrate",
    "db:gen": "dotenv -e .env -- pnpm --filter server prisma:gen",
    "vault:enc": "tsx scripts/vault.ts encrypt",
    "vault:dec": "tsx scripts/vault.ts decrypt"
  },
  "devDependencies": {
    "@repo/shared": "workspace:*",
    "@types/node": "^24.10.1",
    "dotenv-cli": "^11.0.0",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0"
  },
  "packageManager": "pnpm@10.21.0",
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.5"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
