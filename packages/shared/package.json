{
  "name": "@repo/shared",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "server": [
        "./dist/server/index.d.ts"
      ],
      "client": [
        "./dist/client/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build:server": "tsup src/server/index.ts --format cjs,esm --dts --shims --out-dir dist/server",
    "build:client": "tsup src/client/index.ts src/index.ts src/common/index.ts --format cjs,esm --dts",
    "build": "pnpm clean && pnpm build:server && pnpm build:client",
    "dev": "pnpm build:server && pnpm build:client",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "@repo/tsconfig": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
